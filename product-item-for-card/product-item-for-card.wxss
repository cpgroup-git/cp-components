.product-item {
  box-sizing: border-box;
  width: 100%;
  height: 546rpx;
  padding: 20rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-between;
  border-radius: 12rpx;
}
.product-item.small {
  height: 368rpx;
  padding: 0rpx 0rpx 20rpx 0rpx;
}
.product-item .pic {
  width: 304rpx;
  height: 304rpx;
  flex-shrink: 0;
  border-radius: 8rpx;
  overflow: hidden;
  background-color: #f7f7f7;
  position: relative;

  background-image: url('https://fe-ifarm.cpgroupcloud.com/static_resource/cpmart-customer/empty-product-small2.png');
  background-size: cover;
  background-repeat: no-repeat;
}
.product-item .pic.small {
  width: 200rpx;
  height: 200rpx;
}
.product-item .pic .descent-label {
  position: absolute;
  left: 8rpx;
  bottom: 8rpx;
  background:rgba(255,89,0,1);
  border-radius: 4rpx 12rpx 4rpx 12rpx;

  padding: 0rpx 8rpx;
  font-size: 20rpx;
  color: #fff;
}
.product-item .info {
  margin-top: 10rpx;
  width: 100%;
  flex-grow: 1;
  position: relative;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.product-item .info .title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  
  white-space: normal;

  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}
.product-item .info .title.small {
  font-size: 24rpx;
  font-weight: 400;
}
.product-item .info .mark {
  margin-top: 10rpx;
  flex-grow: 1;

  display: flex;
  flex-direction: row;
  align-items: center;
}

.product-item .info .activity {
  padding: 0rpx 8rpx;
  height: 40rpx;
  margin-right: 20rpx;
  text-align: center;
  overflow: hidden;
  background: rgba(255, 135, 39, 0.1);
  border-radius: 2rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #FF530E;
}
.product-item .info .stock-full {
  width: 104rpx;
  height: 40rpx;
  text-align: center;
  overflow: hidden;
  background: rgba(95, 156, 22, 0.1);
  border-radius: 2rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #5f9c16;
}
.product-item .info .stock-shortage {
  width: 104rpx;
  height: 40rpx;
  text-align: center;
  overflow: hidden;
  background: rgba(245, 76, 68, 0.1);
  border-radius: 2rpx;
  font-size: 20rpx;
  line-height: 40rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #f54c44;
}
.product-item .info .price {
  height: 56rpx;

  display: flex;
  overflow: hidden;
  flex-direction: row;
  align-items: flex-end;
  margin-left: -3rpx;
}
.product-item .info .price .current-price-container {
  font-size: 28rpx;
  font-family: PingFangSC-Medium;
  font-weight: bold;
  color: #f54c44;
  display: flex;
  align-items: center;
}
.product-item .info .price .current-unit {
  line-height: 40rpx;
  margin-bottom: -6rpx;
}
.product-item .info .price .current-price {
  line-height: 56rpx;
  font-size: 40rpx;
}
.product-item .info .price .attr-unit {
  /* margin-left: 8rpx; */
  line-height: 40rpx;
  margin-bottom: -6rpx;
  font-size: 24rpx;
}
.product-item .info .price .original-price-container {
  margin-left: 8rpx;
  margin-bottom: 6rpx;
  line-height: 34rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: #999999;
}
.product-item .info .price .original-price-container .original-price {
  line-height: 34rpx;
  text-decoration: line-through;
}
.product-item .info .price .original-price-container .attr-unit {
  line-height: 34rpx;
  font-size: 20rpx;
}

.price-small {
  display: flex;
  flex-direction: column;
}
.price-small .current-price {
  margin-left: -5rpx;
  height: 32rpx;
  font-size: 28rpx;
  font-weight: bold;
  color: #f54c44;
}
.price-small .current-price .attr-unit {
  font-size: 22rpx;
}
.price-small .original-price {
  margin-left: -2rpx;
  height: 20rpx;
  font-size: 20rpx;
  color: #999;
  text-decoration: line-through;
}
.product-item .original-price .attr-unit {
  font-size: 16rpx;
}
.product-item .info .add {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  bottom: 0rpx;
  right: 0rpx;
}
.product-item .info .add-icon {
  position: absolute;
  top: 10rpx;

  width: 40rpx;
  height: 40rpx;
  background-image: url('https://fe-ifarm.cpgroupcloud.com/static_resource/cpmart-customer/counter-add.png');
  background-size: 40rpx 40rpx;
  background-repeat: no-repeat;
  opacity: 1;
}
.product-item .info .add-icon.unactive {
  opacity: 0.5;
}
.product-item .info .add .red-dot {
  position: absolute;
  top: 0rpx;
  right: -4rpx;

  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #FF5900;
  border: 0.5px solid #fff;

  font-size: 18rpx;
  color: #fff;
  text-align: center;
  line-height: 24rpx;
}
.product-item .info .add .red-dot.oval {
  right: -10rpx;
  width: 30rpx;
  height: 24rpx;
  border-radius: 12rpx;
  line-height: 24rpx;
}