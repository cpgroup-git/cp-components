.search-bar {
  width: 100%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-radius: 8rpx;
  background: #f2f2f2;
}
.search-bar .search-icon {
  margin-left: 18rpx;
}
.search-bar .search-input {
  width: 0;
  flex-grow: 1;
  margin-left: 22rpx;
  font-size: 28rpx;
  color: #333;
}
.search-bar .search-clear {
  margin-right: 18rpx;
  margin-left: 10rpx;
}