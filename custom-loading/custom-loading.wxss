.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: white;
  overflow: hidden;
  z-index: 1000;
}
.content {
  position: absolute;
  width: 250rpx;
  height: 250rpx;
  top: 50%;
  left: 50%;
  margin-left: -125rpx;
  margin-top: -125rpx;
}
.img {
  width: 180rpx;
  height: 180rpx;
  margin-left: 35rpx;
}
.text {
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #999;
  margin-top: -10rpx;
}