.bg {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.7);
  overflow: hidden;
  z-index: 10000;
}
.content {
  width: 100%;
  height: 120rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.input {
  margin-left: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  flex-basis: 0;
  flex-grow: 1;
  height: 80rpx;
  background-color: #F7F7F7;
  border-radius: 4rpx;
  border: 1px solid #dedede;
}
.confirm {
  margin-left: 20rpx;
  margin-right: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 34rpx;
  color: #333;
}