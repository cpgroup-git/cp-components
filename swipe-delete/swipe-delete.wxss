.swipe-item {
  width: 100%;
  height: 100%;
  position: relative;
}
.swipe-item .swipe-content {
  width: 100%;
  height: 100%;
  z-index: 100;
  background-color: #fff;
}
.swipe-item .action-1 {
  position: absolute;
  width: 120rpx;
  top: 0rpx;
  bottom: 0rpx;
  background-color: #F54C44;
  font-size: 24rpx;
  color: #fff;
  text-align: center;
  z-index: -1;
}
.swipe-item .action-2 {
  position: absolute;
  width: 120rpx;
  top: 0rpx;
  bottom: 0rpx;
  background-color: #FF8727;
  z-index: -1;
}
.swipe-item .text {
  position: absolute;
  left: 0rpx;
  right: 0rpx;
  top: 50%;
  transform: translate(0, -50%);
  font-size: 24rpx;
  color: #fff;
  text-align: center;
}
