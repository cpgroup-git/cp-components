.empty-bg {
  width: 100%;
  height: 100%;
  position: relative;
}
.empty-bg .empty-content {
  width: 300rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateY(-50%);
  margin-left: -150rpx;
  text-align: center;

  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.empty-bg .empty-content .empty-img {
  width: 242rpx;
  height: 164rpx;
}
.empty-bg .empty-content .empty-text {
  flex-grow: 1;
  padding-top: 59rpx;
}
.empty-bg .empty-content .empty-text-title {
  height: 50rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
}
.empty-bg .empty-content .empty-text-desc {
  height: 50rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 50rpx;
}
.empty-bg .empty-content .empty-btn {
  margin-top: 100rpx;
  width: 150rpx;
  height: 60rpx;
  border-radius: 8rpx;
  border: 1px solid #ff8727;
  text-align: center;
  font-size: 24rpx;
  line-height: 60rpx;
  color: #FF8727;
}