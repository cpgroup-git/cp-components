.modal {
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  height: 100vh;
  width: 100vw;
  z-index: 999;
  align-items: center;
  justify-content: center;
}
.modal-bg {
  position: absolute;
  z-index: -1;
  height: 100%;
  width: 100%;
  background: #000;
  opacity: 0.6;
  transition: opacity 0.5s ease;
  
}
.modal-bg.fade,
.modal-content.fade {
  opacity: 0;
}
.modal-content {
  transition: opacity 0.5s ease;
  opacity: 1;
}

